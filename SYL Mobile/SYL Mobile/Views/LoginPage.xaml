<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SYL_Mobile.Views.LoginPage"
             xmlns:vm="clr-namespace:SYL_Mobile.ViewModels"
             Title="{Binding Title}">

    <ContentPage.Content>
        <StackLayout>
            <!--Label Text="Please login" HorizontalOptions="CenterAndExpand" TextColor="#FFFFFF" BackgroundColor="#008000" FontSize="32"/-->
            <Label Text="User email" HorizontalOptions="CenterAndExpand" Margin="20"/>
            <Entry  x:Name="email" Placeholder="name@email.com" />
            <Label Text="User password" HorizontalOptions="CenterAndExpand" Margin="20"/>
            <Entry x:Name="password" Placeholder="**********" IsPassword="True"/>
            <Button Text="Login" Clicked="LoginClicked"/>
            <Label Text="Don't have an account? No problem" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="20"/>
            <Button Text="Register" Clicked="RegisterClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>